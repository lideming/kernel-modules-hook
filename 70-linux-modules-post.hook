[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Restoring Linux kernel modules...
When = PostTransaction
Depends = coreutils
Exec = /bin/sh -xc 'KVER="${KVER:-$(uname -r)}"; if test -d "/usr/lib/modules/backup/${KVER}" && ! test -d "/usr/lib/modules/${KVER}"; then cp -an --reflink=auto "/usr/lib/modules/backup/${KVER}" /usr/lib/modules/; fi; rm -rf /usr/lib/modules/backup'
